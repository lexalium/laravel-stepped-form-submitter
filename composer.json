{
    "name": "lexal/laravel-stepped-form-submitter",
    "description": "Stepped Form submitter for Laravel & Lumen.",
    "license": "MIT",
    "authors": [
        {
            "name": "Alex Lex",
            "email": "allapkov@gmail.com"
        }
    ],
    "keywords": [
        "laravel",
        "lumen",
        "form submitter",
        "stepped-form submitter"
    ],
    "require": {
        "php": "^8.0",
        "illuminate/contracts": "^8.0 || ^9.0 || ^10.0",
        "illuminate/support": "^8.0 || ^9.0 || ^10.0",
        "lexal/form-submitter": "^1.0",
        "lexal/stepped-form": "^1.1"
    },
    "require-dev": {
        "dealerdirect/phpcodesniffer-composer-installer": "^0.7.1",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5",
        "roave/security-advisories": "dev-latest",
        "webimpress/coding-standard": "^1.2"
    },
    "suggest": {
        "illuminate/config": "Required to use Laravel config (^8.0 || ^9.0 || ^10.0).",
        "illuminate/events": "Required to listen Stepped Form event (^8.0 || ^9.0 || ^10.0)."
    },
    "autoload": {
        "psr-4": {
            "Lexal\\LaravelSteppedFormSubmitter\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Lexal\\LaravelSteppedFormSubmitter\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Lexal\\LaravelSteppedFormSubmitter\\ServiceProvider\\ServiceProvider"
            ]
        }
    }
}
